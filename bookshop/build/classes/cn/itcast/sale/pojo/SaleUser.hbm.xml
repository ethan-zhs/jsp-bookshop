<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.itcast.sale.pojo">
	<class name="SaleUser" table="saleUser">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="userNo" column="user_no" type="string"/>
		<property name="password" column="password" type="string"/>
		<property name="status" column="status" type="string"/>
		<property name="gender" column="gender" type="integer"/>
		<property name="personMessage" column="person_message" type="string"/>		
	</class>
</hibernate-mapping>